# NLQueryDB Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# Application Mode
# ============================================================================
MODE=api  # cli or api

# ============================================================================
# Database Configuration
# ============================================================================
DB_TYPE=mongodb  # mongodb, postgresql, supabase, firebase

# MongoDB
MONGO_URI=mongodb://localhost:27017/
DB_NAME=your_database
COLLECTION=your_collection

# PostgreSQL
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=your_database
PG_USER=postgres
PG_PASSWORD=your_password

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key

# Firebase
FIREBASE_CREDENTIALS_PATH=path/to/serviceAccountKey.json

# ============================================================================
# AI Configuration
# ============================================================================
AI_API_URL=https://grey-api.vercel.app/api/chat
AI_MODEL=gpt-4o

# If using OpenAI directly
# AI_API_URL=https://api.openai.com/v1/chat/completions
# AI_API_KEY=sk-your-api-key

# ============================================================================
# API Server Configuration (if MODE=api)
# ============================================================================
PORT=5000
HOST=0.0.0.0

# ============================================================================
# Embedding Model
# ============================================================================
# Options: all-MiniLM-L6-v2 (fast), all-mpnet-base-v2 (best quality)
EMBEDDING_MODEL=all-MiniLM-L6-v2
